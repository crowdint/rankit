%html
  %head
    %title Rankit
    = stylesheet_link_tag    "//netdna.bootstrapcdn.com/twitter-bootstrap/2.1.1/css/bootstrap-combined.min.css", :media => :all
    = stylesheet_link_tag    "rankit/application", :media => "all"
