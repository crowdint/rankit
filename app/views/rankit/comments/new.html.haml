%h1 New comment for #{@rankable.name}

.row
  .span5
    = form_for [:rankable, @comment] do |f|
      = f.label :comment
      = f.text_area :comment, :class => 'span5', :rows => 5
      .form-actions
        = f.submit :class => 'btn btn-primary'
        = link_to 'Cancel', rankit.rankables_path, :class => 'btn'
